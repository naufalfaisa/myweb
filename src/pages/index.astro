---
import BaseLayout from "../layouts/BaseLayout.astro";
import SocialIcons from "../components/SocialIcons.astro";
import DarkToggle from "../components/DarkToggle.astro";
---

<BaseLayout title="Naufal Faisa">
  <!-- COVER -->
  <div
    class="w-full h-[300px] md:h-[400px] bg-cover bg-center"
    style="background-image: url('/cover.png');"
  ></div>

  <!-- AVATAR + INFO -->
  <main class="fade-in flex flex-col md:flex-row items-start gap-6 px-6 pt-10 max-w-5xl mx-auto">
    <img
      src="/avatar.jpg"
      alt="Avatar"
      class="w-40 h-auto shadow-lg border border-zinc-200 dark:border-zinc-700 transition-all duration-300 hover:scale-105"
    />

    <div class="flex-1">
      <h1 class="text-3xl font-bold text-fuwari relative inline-block">
        <span>Naufal Faisa</span>
        <span class="absolute bottom-0 left-0 w-0 h-1 bg-fuwari transition-all duration-300 group-hover:w-full"></span>
      </h1>
      
      <p class="mt-2 text-zinc-600 dark:text-zinc-300">
        Still learning, still building..<br />
      </p>

      <!-- Link to Blog -->
      <a
        href="https://blog.naufalfaisa.my.id"
        class="animated-link relative inline-block mt-4 px-5 py-2 rounded-full font-medium text-fuwari 
              bg-[#e6f0ff] dark:bg-[#101823] overflow-hidden group"
      >
        <span
          class="absolute inset-0 bg-fuwari translate-x-[-100%] 
                group-[.clicked]:translate-x-0 transition-transform duration-500 ease-out"
        ></span>
        <span
          class="relative z-10 group-[.clicked]:text-white transition-colors duration-500"
        >
          My Blog &rarr;
        </span>
      </a>

      <SocialIcons class="mt-4 " />
    </div>
  </main>

  <!-- FOOTER -->
  <footer class="mt-16 text-center text-sm text-zinc-500 dark:text-zinc-400 py-6 border-t border-zinc-200 dark:border-zinc-700">
    <p>&copy; {new Date().getFullYear()} Naufal Faisa. Powered by Astro</p>
  </footer>

  <!-- Toggle -->
  <DarkToggle class="p-2 rounded-full hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors" />
</BaseLayout>